<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".projection_92712">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eaeaea">

        <LinearLayout
            android:id="@+id/projection_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_chevron_left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_control"
                android:textColor="#47B2E2"
                android:textSize="22dp" />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投影機："
            android:textSize="28dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/projection_staust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="28dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_on"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="開啟"
            android:textSize="28dp"
            android:textColor="@color/colorAccent"
            android:background="#F3B85F"/>
        <Button
            android:id="@+id/btn_up"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_up"/>
        <Button
            android:id="@+id/btn_ready"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="準備"
            android:textSize="28dp"
            android:textColor="@color/colorAccent"
            android:background="#F3B85F" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="確認"
            android:textSize="28dp"
            android:textColor="@color/colorAccent"
            android:background="#F3B85F"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_source"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="來源"
            android:textSize="28dp"
            android:textColor="@color/colorAccent"
            android:background="#F3B85F"/>

        <Button
            android:id="@+id/btn_down"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_down" />

        <Button
            android:id="@+id/btn_leave"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="#F3B85F"
            android:text="離開"
            android:textColor="@color/colorAccent"
            android:textSize="28dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="#000000"
            android:text="*連續按下兩次準備以關閉投影機"/>
    </LinearLayout>

</LinearLayout>